           android:textColor="@color/black"
           app:layout_constraintEnd_toStartOf="@+id/guideline2"
           app:layout_constraintStart_toStartOf="@+id/guideline"
           app:layout_constraintTop_toBottomOf="@+id/textView" />




   </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
